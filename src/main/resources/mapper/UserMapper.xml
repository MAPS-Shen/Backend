<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xdu.backend.Dao.UserDao">

    <resultMap id="UserMap" type="xdu.backend.pojo.User">
        <result column="user_id" jdbcType="DECIMAL" property="userId"/>
        <result column="nname" jdbcType="VARCHAR" property="userName"/>
        <result column="phone_num" jdbcType="VARCHAR" property="phoneNumber"/>
        <result column="ppassword" jdbcType="VARCHAR" property="password"/>
        <result column="privilege" jdbcType="DECIMAL" property="privilege"/>
    </resultMap>
    
    <insert id="registerUser" parameterType="xdu.backend.pojo.User">
        insert into user (phone_num,ppassword,nname)
        values (#{phoneNumber},#{password},#{userName})
    </insert>

    <select id="getUserByPhoneNumber" resultMap="UserMap">
        select * from user where phone_num = #{phoneNumber}
    </select>

    <update id="changeNameById">
        update user set nname = #{newName} where phone_num = #{phoneNumber}
    </update>
    

</mapper>
    
    