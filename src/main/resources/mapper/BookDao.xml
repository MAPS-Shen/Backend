<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xdu.backend.Dao.BookDao">

    <select id="queryBookByISBN" parameterType="String" resultType="xdu.backend.pojo.Book">
        select * from book where isbn_code = #{isbnCode}
    </select>

    <select id="queryBook" parameterType="String"  resultType="xdu.backend.pojo.Book">
        select distinct * from book where book_name like concat(concat('%', #{bookInfo}), '%')
                                     or book_author like concat(concat('%', #{bookInfo}), '%')
    </select>

    <select id="reserveBook" parameterType="String" resultType="xdu.backend.pojo.Book">
        select * from book where book_id = #{bookID} and available = 1
    </select>

    <select id="getAllBooks" resultType="xdu.backend.pojo.Book">
        select * from book
    </select>

    <select id="getAvailable" parameterType="String" resultType="boolean">
        select available from book where book_id = #{bookID}
    </select>


</mapper>

